<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đặt mục tiêu dinh dưỡng"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#333"
        android:accessibilityHeading="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/currentWeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cân nặng hiện tại: 70 kg"
        android:textSize="16sp"
        android:textColor="#333"/>

    <TextView
        android:id="@+id/currentHeightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều cao hiện tại: 175 cm"
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/bmiEvaluationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đánh giá BMI: "
        android:textSize="16sp"
        android:textColor="#333"
        android:layout_marginTop="8dp"/>

    <!-- Input for calorie goal -->
    <EditText
        android:id="@+id/calorieGoalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mục tiêu Calo"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="8dp"/>

    <!-- Input for protein goal -->
    <EditText
        android:id="@+id/proteinGoalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mục tiêu Protein (g)"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="8dp"/>

    <!-- Input for fat goal -->
    <EditText
        android:id="@+id/fatGoalEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mục tiêu Chất béo (g)"
        android:inputType="number"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/targetDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Chọn ngày hoàn thành"
        android:padding="12dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="8dp"
        android:textColor="#000"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:contentDescription="Chọn ngày hoàn thành cho mục tiêu dinh dưỡng"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"/>

    <TextView
        android:id="@+id/dailyIncreaseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/saveGoalsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:contentDescription="Lưu mục tiêu dinh dưỡng"/>

    <TextView
        android:id="@+id/feedbackTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/holo_red_light"
        android:visibility="gone"/>

</LinearLayout>
